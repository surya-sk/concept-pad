<Page
    x:Class="ConceptPad.Views.ConceptPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConceptPad.Views"
    xmlns:data="using:ConceptPad.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentControl Content="{x:Bind concept}">
            <ContentControl.ContentTemplate>
                <DataTemplate x:DataType="data:Concept">
                    <StackPanel Orientation="Vertical">
                        <TextBox x:Name="TitleText" Text="{Binding Name}" IsReadOnly="False" FontSize="50" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Type}" />
                        <TextBox x:Name="DescriptionText" Text="{Binding Description}" IsReadOnly="True" />
                        <TextBox x:Name="ToolsText" Text="{Binding Tools}" IsReadOnly="True" />
                    </StackPanel>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>

        <CommandBar Grid.Row="1">
            <AppBarButton x:Name="SaveButton" Icon="Save" Label="Save" Click="SaveButton_Click" Visibility="Collapsed"/>
            <AppBarButton x:Name="EditButton" Icon="Edit" Label="Edit" Click="EditButton_Click"/>
            <AppBarButton x:Name="DeleteButton" Icon="Delete" Label="Delete" Click="DeleteButton_Click"/>
            <AppBarButton x:Name="CloseButton" Icon="Clear" Label="Close" Click="CloseButton_Click"/>
        </CommandBar>
    </Grid>
</Page>
